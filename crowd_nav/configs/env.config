[env]
time_limit = 25
time_step = 0.25
randomize_attributes = false
val_size = 500
test_size = 500

[reward]
success_reward = 1.0
collision_penalty = -0.25
discomfort_dist = 0.2
discomfort_penalty_factor = 0.5

[humans]
policy = orca
visible = true
radius  = 0.3
v_pref  = 1.0
sensor  = coordinates
kinematics = holonomic

[sim]
train_val_sim = square_crossing
test_sim = circle_crossing
square_width = 8
circle_radius = 4
human_num = 5

; Optional: our polygon/roadmap settings (only if you wired them in)
[obstacles]
enabled = true
build_graph = true
n_samples = 120
k_neighbors = 8
buffer_dist = 0.25
resolution = 0.10
env_vertices = [[-6,-6],[6,-6],[6,6],[-6,6]]
obstacle_vertices = [[[-1.5,-1],[1.5,-1],[1.5,1],[-1.5,1]], [[2,0],[3,0],[3,2],[2,2]]]

[render]
show_graph = false

[robot]
policy = orca
visible = true
radius  = 0.3
v_pref  = 1.0
sensor  = coordinates
kinematics = holonomic